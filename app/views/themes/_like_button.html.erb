<% unless entry.mine?(current_user) %>
  <% if entry.liked?(current_user) %>
    <% if smartphone? %>
      <%= button_tag "いいね！を取り消す", data: {id: entry.id, status: "remove"}, class: "like_button btn btn-default btn-xs"%>
    <% else %>
      <span class="like_button" data-id="<%= entry.id %>" data-status="remove">・いいね！を取り消す</span>
    <% end %>
  <% else %>
    <% if smartphone? %>
      <%= button_tag "いいね！", data: {id: entry.id, status: "attach"}, class: "like_button btn btn-default btn-xs" %>
    <% else %>
      <span class="like_button" data-id="<%= entry.id %>" data-status="attach">・いいね！</span>
    <% end %>
  <% end %>
<% end %>
