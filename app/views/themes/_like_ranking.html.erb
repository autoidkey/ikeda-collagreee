<div class="panel panel-default">
  <div class="panel-header">
    <h4 class=""><span class="glyphicon glyphicon-tower" aria-hidden="true"></span> <%= t('themes.like_ranking_header') %></h4>
  </div>
  <div class="panel-body">
    <table class="table table-striped ranking-table">
      <thead>
        <tr>
          <th><%= t('themes.like_ranking_rank') %></th>
          <th><%= t('themes.like_ranking_user') %></th>
          <th><%= t('themes.like_ranking_title') %></th>
          <th><%= t('themes.like_ranking_like') %></th>
        </tr>
      </thead>
      <tbody>
        <% before_num = 0 %>
        <% @theme.like_ranking.each_with_index do |entry, idx| %>
          <% if idx > 4  && before_num != entry.all_like_count %>
            <% break %>
          <% end %>
          <% before_num = entry.all_like_count  %>
          <% user = entry.user %>
          <tr>
            <td class="rank rank-<%= idx+1 %>" id=""><%= idx+1 %></td>
            <td class="rank-image">
              <% if params[:locale] != 'en' %>
              <%= link_to (image_tag user_icon_path(user),
                           class: 'user-icon img-circle set-popover',
                           data: {
                             toggle: "popover",
                             placement: "right",
                             content: user.name.to_s + '｜' + t('themes.post') + ' ' + user.entries.count.to_s + ' / Like ' + user.likes.status_on.count.to_s + t('themes.count')
                           }
                           ), '/users/' + user.id.to_s %>　
              <% else %>
              <%= link_to (image_tag user_icon_path(user),
                           class: 'user-icon img-circle set-popover',
                           data: {
                             toggle: "popover",
                             placement: "right",
                             content: user.name.to_s + '｜' + t('themes.post') + ' ' + user.entries.count.to_s + ' / Like ' + user.likes.status_on.count.to_s + t('themes.count')
                           }
                           ), '/users/' + user.id.to_s + '?locale=en'%>
              <% end %>
            </td>
            <td><a href="#entry-<%= entry.id %>" class="top-theme"><%= entry.title %></td>
            <td class="rank-score">
              <span class="user-score"><%= entry.all_like_count %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
