<div class="panel panel-default">
  <div class="panel-body">
    <h3>Tag / 論点タグ</h3>
    <%= form_for(@issue) do |f| %>
      <div class="form-group">
        <%= f.text_field :name , class: 'form-control' %>
      </div>
      <%= f.hidden_field :theme_id, { :value => @theme.id } %>
      <%= f.submit '＋', class: 'btn btn-default' %>
    <% end %>

    <% @theme.issues.each do |issue| %>
      <%= issue.name %>
    <% end %>
  </div>
</div>
