<div class="row">
  <div class="col-md-8">
    <div class="well">
      <%= render 'top_form' if user_signed_in? %>
    </div>
    <hr />

    <div class="well" id="tl-tool">
      <%= link_to "新着", {controller: "themes", action: "order", id: @theme.id, sort: "time"}, :remote=> true %>
      <div class="btn-group" id="tl-order">
        <button type="button" class="btn btn-default" id="order-time"><span class="glyphicon glyphicon-time"></span> 新着</button>
        <button type="button" class="btn btn-default" id="order-popular"><span class="glyphicon glyphicon-star-empty"></span> 人気</button>
      </div>

      <div id="issues">
        論点タグ
        <% @theme.issues.each do |issue| %>
          <span class="label label-default"><%= issue.name %></span>
        <% end %>
      </div>
    </div>

    <div id="entry-tl">
      <% @entries.each_with_index do |entry, i| %>
        <div class="panel panel-default" id="entry-<%= entry.id %>">
          <div class="panel-body">
            <%= render 'entry', entry: entry %>
            <hr />
            <%= render 'reply_form', {entry: entry, i: i} if user_signed_in? %>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @entries %>
    <div id="icon-loading">
      <%= image_tag 'theme/icon-loading.gif' %>
    </div>
  </div>
  <div class="col-md-4">
    <%= render 'theme_info' %>
    <%= render 'activity' if user_signed_in? %>
    <%= render 'other_themes' %>
    <%= render 'users' %>
    <%= render 'tags' if user_signed_in? && !current_user.normal? %>
  </div>
</div>
