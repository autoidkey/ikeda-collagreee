<div class="entry-body">
  <div class="entry-table">
    <!-- スマホで画面変更 -->
    <% if smartphone? %>
      <div class="entry-left"></div>
      <div class="entry-right">
        <span class="entry-title"><%= entry.title %></span>
        <div class="entry-padding"></div>
        <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %> 
        <% if entry.image? %>
          <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), "/collagree_ss"+entry.image_url %>
        <% end %>
        <% if entry.stamp? %>
          <%= image_tag(entry.stamp, class: 'show-stamp')%>
        <% end %>
      </div>
    <% else %>
      <!-- 画像とスタンプがあれば表示 -->
      <div class="entry-left">
        <% if entry.image? %>
          <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), entry.image_url %>
        <% end %>
        <% if entry.stamp? %>
          <%= image_tag(entry.stamp, class: 'show-stamp')%>
        <% end %>
      </div>
      <!-- タイトルと内容を表示 -->
      <div class="entry-right">
        <span class="entry-title"><%= entry.title %></span>
        <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %>
      </div>
    <% end %>
  </div>

