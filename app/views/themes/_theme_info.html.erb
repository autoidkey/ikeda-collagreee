<div class="panel panel-default">
  <div class="panel-body">
    <h3>Theme / テーマ</h3>
    <h3><%= @theme.title %></h3>
    <% if @theme.image? %>
      <%= image_tag @theme.image.url %>
    <% else %>
      <%= image_tag 'noimage.gif' %>
    <% end %>
    <p>
      <%= @theme.body %>
    </p>
    <span class="glyphicon glyphicon-user"></span> <%= @theme.joins.count %>
    <span class="glyphicon glyphicon-comment"></span> <%= @theme.entries.count %>

  </div>
</div>
