<div class="panel panel-default">
  <div class="panel-header">
    <h4 class=""><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= t('themes.theme_title') %></h4>
  </div>
  <div class="panel-body">
    <div class="panel-body-theme">
      <h3 style="margin-top: 10px"><%= @theme.title %></h3>
      <div class="theme-image-disc">
        <% if @theme.image? %>
          <%= image_tag @theme.image.url(:theme_thumb) %>
        <% else %>
          <%= image_tag 'noimage.gif' %>
        <% end %>
      </div>
      <p>
        <%= simple_format(@theme.body_text) %>
      </p>
      <span class="glyphicon glyphicon-user"></span> <%= @theme.joins.count %>
      <span class="glyphicon glyphicon-comment"></span> <%= @theme.entries.count %>
      <% if @theme.start_at? %>
        <span class="glyphicon glyphicon-time"></span> <%= @theme.start_at.strftime("%m.%d %H:%M") %> - <%= @theme.end_at.strftime("%m.%d %H:%M") %>
      <% end %>
    </div>
  </div>
</div>
