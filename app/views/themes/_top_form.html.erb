<div class="panel panel-default entry-panel">
  <div class="panel-header">
    <h4 class=""><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Post / 投稿</h4>
  </div>

  <div class="panel-body">
    <% if current_user.admin? || current_user.facilitator? %>
      <ul class="nav nav-pills nav-collagree margin-bottom" role="tablist">
        <li class="active"><a href="#faciltation" role="tab" data-toggle="tab">ファシリテーション</a></li>
        <li><a href="#post" role="tab" data-toggle="tab">投稿</a></li>
      </ul>
    <% end %>

    <!-- Tab panes -->
    <div class="tab-content">
      <% if current_user.admin? || current_user.facilitator? %>
        <div class="tab-pane facilitation-tab active" id="faciltation">
          <%= render 'facilitation_form' %>
        </div>
        <div class="tab-pane" id="post">
          <%= render 'entry_form' %>
        </div>
        <% else %>
        <div class="tab-pane active" id="post">
          <%= render 'entry_form' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
