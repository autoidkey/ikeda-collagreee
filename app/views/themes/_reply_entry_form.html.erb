<%= form_for @entry, url: {controller: :themes, action: :create_entry}, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :body, :size=>"80x3",class: 'form-control reply-entry-form', placeholder: 'コメントしましょう', :data => {:id => entry.id} %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.radio_button(:np, 0) %>
    <%= label_tag(:non, t('themes.entry_child_neither')) %>
    <%= f.radio_button(:np, 50) %>
    <%= label_tag(:agree, t('themes.entry_child_agree')) %>
    <%= f.radio_button(:np, 100) %>
    <%= label_tag(:disagree, t('themes.entry_child_disagree')) %>
  </div>


  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.hidden_field :parent_id, { :value => entry.id } %>
  <%= f.hidden_field :theme_id, { :value => @theme.id } %>
  <%= f.hidden_field :facilitation, { :value => false } %>
  <%= f.hidden_field :agreement, { :value => false } %>
  <%= f.submit t('themes.post'), class: 'btn btn-default' %>
<% end %>
