<%= form_for(@entry) do |f| %>
  <div class="form-group">
    <%= f.text_area :body , class: 'form-control', placeholder: 'コメントします' %>
  </div>
  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.hidden_field :parent_id, { :value => e.id } %>
  <%= f.hidden_field :theme_id, { :value => @theme.id } %>
