<div class="panel panel-default">
  <div class="panel-header">
    <h4 class=
        ""><span class="glyphicon glyphicon-tower" aria-hidden="true"></span> <%= t('themes.post_count_ranking') %></h4>
  </div>

  <div class="panel-body">
    <table class="table table-striped ranking-table">
      <thead>
        <tr>
          <th><%= t('themes.ranking') %></th>
          <th><%= t('themes.user') %></th>
          <th><%= t('themes.post_count') %></th>
        </tr>
      </thead>

      <tbody>
        <% users.each_with_index do |user, idx| %>
          <% user_count = user.entry_count %>
          <% if user_count == 0 %><% break %><% end %>
          <tr>
            <td class="rank rank-<%= idx + 1%>" id=""><%= idx + 1 %></td>
            <td class="rank-image">
              <%= link_to (image_tag user_icon_path(user),
                           class: 'user-icon img-circle set-popover',
                           data: {
                             toggle: "popover",
                             placement: "right",
                             content: user.name.to_s + '｜' + t('themes.post') + ' ' + user_count.to_s + t('themes.count_like') + user.like_count.to_s + t('themes.count')
                           }
                           ), '/users/' + user.id.to_s %>　<%= user.name %>
            </td>
            <td class="rank-score">
              <span class="user-score">
                <%= user_count %>
              </span>
              <%= t('themes.count') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
