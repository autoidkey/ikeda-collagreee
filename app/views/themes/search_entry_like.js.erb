if(<%= @type == "1" %>) {
	$('#tree-data').html($("<%=j render 'sort_tl', entry: @entry %>").hide().fadeIn('slow'));
} else {
	if(<%= @page == 1 %>) {
	  $('#timeline').html($("<%=j render 'sort_tl', entry: @entry %>").hide().fadeIn('slow'));
	} else {
	  $('#timeline').append($("<%=j render 'sort_tl', entry: @entry %>").hide().fadeIn('slow'));
	}

	$('#top-loading').css('display','none');
	$('#timeline').css('opacity','1.0');

	$('#next').html($("<%=j render 'pagenation' %>"))
	slider.set();
	modal.set();
}
