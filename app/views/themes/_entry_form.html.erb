<%= form_for(@entry) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>

  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.hidden_field :parent_id, { :value => @entry.parent_id } %>
  <%= f.hidden_field :theme_id, { :value => @theme.id } %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
