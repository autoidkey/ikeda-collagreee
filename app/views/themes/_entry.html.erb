<div class="panel panel-default entry-panel <%= 'facilitation-back' if entry.facilitation %>" data-id="<%= entry.id %>">
  <div class="panel-body">
    <div class="content">
      <div class="entry-box post-content" id="entry-<%= entry.id %>" data-id="<%= entry.id %>">

        <div class="entry-points">
          <p class="points" id="point-<%= entry.id %>"><%= entry.score %></p>
          <p class="points-text">points</p>
        </div>

        <%= render 'user_icon', entry: entry %>


        <div class="entry-body">
          <div class="entry-table">
            <!-- スマホで画面変更 -->
            <% if smartphone? %>
              <div class="entry-left"></div>
              <div class="entry-right">
                <span class="entry-title"><%= entry.title %></span>
                <div class="entry-padding"></div>
                <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %> 
                <% if entry.image? %>
                  <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), "/collagree_ss"+entry.image_url %>
                <% end %>
                <% if entry.stamp? %>
                  <%= image_tag(entry.stamp, class: 'show-stamp')%>
                <% end %>
              </div>
            <% else %>
              <!-- 画像とスタンプがあれば表示 -->
              <div class="entry-left">
                <% if entry.image? %>
                  <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), entry.image_url %>
                <% end %>
                <% if entry.stamp? %>
                  <%= image_tag(entry.stamp, class: 'show-stamp')%>
                <% end %>
              </div>
              <!-- タイトルと内容を表示 -->
              <div class="entry-right">
                <span class="entry-title"><%= entry.title %></span>
                <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %>
              </div>
            <% end %>
          </div>
        </div>

        <% entry.issues.each do |issue| %>
          <span class="label label-default issue-label" data-id="<%= issue.id %>"><%= issue.name %></span>
        <% end %>


        <!-- 投稿の情報 -->
        <%= render 'information', entry: entry %>



        <!-- いいねボタンと返信ボタン -->
        <% #unless entry.facilitation %>
          <% if user_signed_in? %>
            <div class="actions">
              <%= render 'reply_button', entry: entry %>
              <%= render 'like_button', entry: entry %>
            </div>
          <% end %>


        <!-- スレッドの子供の記事を表示していく -->
        <div class="children" style="<%='margin-left: -20px;' if smartphone? %>">
          <% entry.thread_entries.each do |child| %>
            <hr>
            <%= render 'child_entry', child: child %>
          <% end %>
        </div>

        <% if user_signed_in? %>
          <%= render 'modal_form', child: entry  %>
        <% end %>


      </div>
    </div>
  </div>
</div>