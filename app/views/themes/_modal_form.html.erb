<div class="modal-window <%= 'modal-window-mobile' if smartphone? %>" id="reply-modal-<%= child.id %>">
  <div class="modal_close"></div>
  <div class="reply-modal-parent">
    <div class="content" id="modal-window-content">
      <%= render 'themes/user_icon', entry: child %>
      
      <!-- 仕方がなくまるまる追加どうにかしたい  entry_show.html -->
      <% entry = child %>
      <div class="entry-body">
        <div class="entry-table">
          <!-- スマホで画面変更 -->
          <% if smartphone? %>
            <div class="entry-left"></div>
            <div class="entry-right">
              <span class="entry-title"><%= entry.title %></span>
              <div class="entry-padding"></div>
              <div class = "entry-body-text">
                <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %> 
              </div>
              <% if entry.image? %>
                <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), "/collagree_ss"+entry.image_url %>
              <% end %>
              <% if entry.stamp? %>
                <%= image_tag(entry.stamp, class: 'show-stamp')%>
              <% end %>
            </div>
          <% else %>
            <!-- 画像とスタンプがあれば表示 -->
            <div class="entry-left">
              <% if entry.image? %>
                <%= link_to (image_tag entry.image.entry_thumb.url, class: 'img-radius'), entry.image_url %>
              <% end %>
              <% if entry.stamp? %>
                <%= image_tag(entry.stamp, class: 'show-stamp')%>
              <% end %>
            </div>
            <!-- タイトルと内容を表示 -->
            <div class="entry-right">
              <span class="entry-title"><%= entry.title %></span>
              <div class = "entry-body-text">
                <%= simple_format(auto_link(entry.body, html: { target: '_blank' }, link: :urls)) %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 論点タグ -->
        <% entry.issues.each do |issue| %>
          <span class="label label-default issue-label" data-id="<%= issue.id %>"><%= issue.name %></span>
        <% end %>
      </div>

      <!-- 仕方がなくまるまる追加  entry_show.html -->

    <div class="info-list">
      <%= render 'themes/information', entry: child %>
    </div>

<!--     イメージがあったら表示 -->
    <% if child.image? %>
      <%= image_tag child.image.entry_thumb.url %>
    <% end %>
    </div>
  </div>
  <hr />

<!-- ファシリテータか一般ユーザーの投稿かを選択 -->
  <% if current_user.admin? || current_user.facilitator? %>
    <ul class="nav nav-pills nav-collagree margin-bottom" role="tablist">
      <li class="active"><a href="#post<%= child.id %>" role="tab" data-toggle="tab"><%= t('themes.post') %></a></li>
      <li><a href="#facilitation<%= child.id %>" role="tab" data-toggle="tab"><%= t('themes.facilitation') %></a></li>
    </ul>
  <% end %>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active reply-tab" id="post<%= child.id %>">
      <%= render 'themes/reply_entry_form', { entry: child} %>
    </div>

    <!-- ファシリテータか一般ユーザーの投稿かを選択 -->
    <% if current_user.admin? || current_user.facilitator? %>
      <div class="tab-pane facilitation-tab" id="facilitation<%= child.id %>">
        <%= render 'themes/reply_facilitation_form', { entry: child, k: child.id } %>
      </div>
    <% end %>
  </div>
</div>
