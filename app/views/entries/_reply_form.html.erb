<% if current_user.admin? || current_user.facilitator? %>
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#post<%= i %>" role="tab" data-toggle="tab"><%= t('entries.post') %></a></li>
  <li><a href="#facilitation<%= i %>" role="tab" data-toggle="tab"><%= t('entries.facilitation') %></a></li>
</ul>
<% end %>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active reply-tab" id="post<%= i %>">
    <%= render 'reply_entry_form', entry: entry %>
  </div>
  <% if current_user.admin? || current_user.facilitator? %>
  <div class="tab-pane reply-facilitation-tab" id="facilitation<%= i %>">
    <%= render 'reply_facilitation_form', { entry: entry, k: i } %>
  </div>
  <% end %>
</div>
