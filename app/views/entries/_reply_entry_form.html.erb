<%= form_for @entry_new, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :body , class: 'form-control', placeholder: 'コメントします' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>

  <%= f.hidden_field :user_id, { :value => current_user.id } %>
  <%= f.hidden_field :parent_id, { :value => entry.id } %>
  <%= f.hidden_field :theme_id, { :value => @theme.id } %>
  <%= f.hidden_field :facilitation, { :value => false } %>
  <%= f.submit '投稿', class: 'btn btn-default' %>
<% end %>
