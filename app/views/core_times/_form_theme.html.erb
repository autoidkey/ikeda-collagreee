<%= form_for(core_time) do |f| %>
  <% if core_time.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(core_time.errors.count, "error") %> prohibited this core_time from being saved:</h2>

      <ul>
      <% core_time.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Theme<br>
    <%= f.select :theme_id, {@theme.title => @theme.id} %>
  </div>
  <div class="field">
    Start Time<br>
    <%= f.datetime_select :start_at, :minute_step => 10 %>
  </div>
  <div class="field">
    End Time<br>
    <%= f.datetime_select :end_at, :minute_step => 10 %>
  </div>

  <br>
  <div class="field">
    <%= f.submit 'Create', class: 'btn btn-default' %>
  </div>
<% end %>


<% if false %>
<%= line_chart @theme.core_time_value, label: "閲覧数" %>
<div class="text-center">過去3日間の参加者の各時間における閲覧数</div>
<% end %>