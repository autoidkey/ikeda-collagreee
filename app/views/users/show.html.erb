<div class="row">
  <div class="col-md-12 padding">
    <h1><%= @user.name %> さん</h1>
    <div class="row">
      <div class="col-md-12">
        <% if current_user.admin? || current_user.organizer? %>
          <span class="user_keyword">性別：<%= @user.gender=="性別" ? "未選択" : @user.gender %>、</span>
          <span class="user_keyword">学年：<%= @user.age=="年齢" ? "未選択" : @user.age %>、</span>
<!--           <span class="user_keyword">住まい：<%= @user.home=="住まい" ? "未選択" : @user.home %>、</span>
          <span class="user_keyword">職業：<%= @user.move=="職業" ? "未選択" : @user.move %>、</span>
          <span class="user_keyword">参加チーム：<%= @user.group=="参加チーム" ? "未選択" : @user.group %></span> -->
        <% end %>
        <%= simple_format(@user.body) %>
      </div>
    </div>

    <hr>


    <div class="row">
      <div class="col-md-4">
        <h3><%= t('users.active_rate') %></h3>
        <div id="user-action-chart"></div>
        <table class="table table-striped">
          <tbody>
            <% @data.each do |d| %>
              <tr>
                <td id=""><%= d[0] %></td>
                <td id=""><%= d[1] %>件</td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <div class="col-md-8">
        <h3><%= t('users.user_show_keywords') %></h3>
        <% @keyword.each do |key, value| %>
          <h4>【<%= Theme.find(key).title %>】</h4>
          <% value.sort_by { |k| -k.score }.each_with_index do |word, i| %>
            <% if i == 0 %>
              <span class="user_keyword"><%= word.word %></span>
            <% end %>
            <% if i < 20 %>
              <span class="user_keyword"> / <%= word.word %></span>
            <% end %>
          <% end %>
        <% end %>

        <hr>

        <h3><%= t('users.user_posts') %></h3>
        <div class="user-entries-show">
          <% @user.entries.each do |entry| %>
            <%= render "users/user_entry", child: entry %>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  myc3.user_action_chart(<%= raw @data %>, '<%= @user.name %>')
</script>
