      <!--   <%= f.select :mail_format, User.mail_formats.keys.to_a, {}, { class: "form-control" } %> -->
      <!-- </div> -->

      <div class="form-group">
        <label for="user_image"><%= t('users.registration.icon') %></label>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
        <label for=""><%= t('users.registration.password') %> <% if @validatable %>(<%= @minimum_password_length %> <%= t('users.registration.restrict') %>)<% end %>：</label>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for=""><%= t('users.registration.password_confirm') %></label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

      <div><%= f.submit t('users.registration.register'), class: 'btn btn-default login-btn' %></div>
    <% end %>

