<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t('users.registration.create') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, t('users.registration.mail') %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :name, t('users.registration.nickname') %>
        <%= f.text_field :name, autocomplete: "off", class: 'form-control' %>
      </div>

<!--       <div class="form-group">
        <%= f.label :realname, t('users.registration.name') %>
        <%= f.text_field :realname, autocomplete: "off", class: 'form-control' %>
      </div> -->
      <% if true %>
      <%= f.hidden_field :realname, { :value => "なし" } %>
      <% end %>

      <div class="form-group">
        <%= f.label :gender, t('users.registration.gender') %>
        <%= f.select :gender, User.genders.keys.to_a, {}, { class: "form-control" } %>
      </div>


      <div class="form-group">
        <%= f.label :age, "年齢" %>
        <%= f.select :age, User.ages.keys.to_a, {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :home, '住まい' %>
        <%= f.select :home, User.homes.keys.to_a, {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :move, '職業' %>
        <%= f.select :move, User.moves.keys.to_a, {}, { class: "form-control" } %>
      </div>


