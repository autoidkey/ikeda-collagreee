<h2>アカウント新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true %></div>

  <div>
    <%= f.label :name, 'ニックネーム' %><br />
    <%= f.text_field :name, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :realname, '氏名' %><br />
    <%= f.text_field :realname, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :gender, '性別' %><br />
    <%= f.select :gender, User.genders.keys.to_a %>
  </div>

  <div>
    <%= f.label :age, '年齢' %><br />
    <%= f.select :age, User.ages.keys.to_a %>
  </div>

  <div>
    <%= f.label :home, '住まい' %><br />
    <%= f.select :home, User.homes.keys.to_a %>
  </div>

  <div>
    <%= f.label :move, '通勤・通学' %><br />
    <%= f.select :move, User.moves.keys.to_a %>
  </div>

  <div>
    <%= f.label :remind, 'お知らせメール' %><br />
    <%= f.select :remind, User.reminds.keys.to_a %>
  </div>

  <div>
    <%= f.label :mail_format, 'メール形式' %><br />
    <%= f.select :mail_format, User.mail_formats.keys.to_a %>
  </div>

  <div>
    <label for="user_image">アイコン</label>
    <%= f.file_field :image %>
  </div>


  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "users/shared/links" %>
